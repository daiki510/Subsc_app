<div class="container">
  <%= form_with model: @contact, local: true do |f| %>
    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

        <ul>
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-item">
      <%= f.label :email, "返信先メールアドレス" %>
      <%= f.text_field :email, class: "form-control w-50" %>
    </div>

    <div class="form-item">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control w-50" %>
    </div>

    <div class="form-item">
      <%= f.label :message, "お問い合わせ内容" %>
      <%= f.text_area :message, class: "form-control w-50" ,rows: 7 %>
    </div>

    <%= f.submit "送信" ,class: "btn btn-primary my-3"%>
  <% end %>

  <div class="form-footer">
    <%= link_to "一覧へ戻る", user_path(current_user.id), class: "btn btn-light" %>
  </div>
</div>