<div class="container">
  <div class="show-wrapper">
    <h1 class="mb-5">サブスク詳細</h1>
    <table class="table table-hover w-50 mb-5">
      <tr>
        <td>名前</td>
        <td><%= @subsc.name %></td>
      </tr>
      <tr>
        <td>アイコン</td>
        <% if @subsc.icon.present? %>
          <td><%= image_tag @subsc.icon.thumb.url %></td>
        <% else %>
          <td><%= @subsc.icon %></td>
        <% end %>
      </tr>
      <tr>
        <td>概要</td>
        <td><%= @subsc.summary %></td>
      </tr>
      <tr>
        <td>カテゴリー</td>
        <td>
          <% @subsc.categories.each do |category|%>
            <span class="badge badge-primary py-1 px-2"><%= category.name %></span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>利用料金</td>
        <td><%= @detail.charge %></td>
      </tr>
      <tr>
        <td>支払日</td>
        <td><%= @detail.due_date %></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @detail.payment_type %></td>
      </tr>
      <tr>
        <td>備考欄</td>
        <td><%= @detail.note %></td>
      </tr>
    </table>
    
    <div class="form-footer">
      <%= link_to "編集", edit_detail_path, class: "btn btn-success mr-3" %>
      <%= link_to "一覧へ戻る", user_path(current_user.id), class: "btn btn-light" %>
    </div>
  </div>
</div>
