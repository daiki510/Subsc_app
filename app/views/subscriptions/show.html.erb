<div class="container">
  <div class="show-wrapper">
    <h1 class="mb-5">サブスク詳細</h1>
    <table class="table table-hover w-50 mb-5">
      <tr>
        <td>名前</td>
        <td><%= @subscription.name %></td>
      </tr>
      <tr>
        <td>アイコン</td>
        <td><%= @subscription.icon %></td>
      </tr>
      <tr>
        <td>概要</td>
        <td><%= @subscription.summary %></td>
      </tr>
      <tr>
        <td>カテゴリー</td>
        <td>
          <% @subscription.categories.each do |category|%>
            <span class="badge badge-primary py-1 px-2"><%= category.name %></span>
          <% end %>
        </td>
      </tr>
    </table>
    
    <div class="form-footer">
      <%= link_to "編集", edit_subscription_path, class: "btn btn-success mr-3" %>
      <%= link_to "一覧へ戻る", subscriptions_path, class: "btn btn-light" %>
    </div>
  </div>
</div>
