<%= form_tag import_subscriptions_path, multipart: true do %>
  <div class=”input-inline”>
    <div class="input-group">
      <label class="input-group-prepend">
        <span class="btn btn-secondary">
          ファイル選択<%= file_field_tag :file, style: "display:none;" %>
        </span>
      </label>
      <%= text_field_tag :text, "", class: "form-control csv-text", readonly: "" %>
    </div>
    <div class="input-group">
      <%= submit_tag "CSVインポート", class: "btn btn-info mb-2" %>
    </div>
  </div>
<% end %>
<%= link_to 'CSVエクスポート', subscriptions_path(format: :csv), class: "btn btn-success mb-3" %>