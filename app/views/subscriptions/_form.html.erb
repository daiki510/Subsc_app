<div class="container subscription-form">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7 mx-auto mb-3">
      <% if @subscription.errors.any? %>
        <div id="error_explanation">
          <h2><%= @subscription.errors.count %>件のエラーがあります。</h2>
          <ul>
            <% @subscription.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="card">
        <h2 class="form-title">
          <% if params[:id] %>
            サブスクリプション編集
          <% else %>
            サブスクリプション登録
          <% end %>
        </h2>
        <%= form_with model: @subscription, local: true do |f| %>
          <% service = service(@subscription) %>
          <% unless params[:id] %>
            <%= f.hidden_field :service_id, value: params[:service_id] %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-xs-12 col-md-2 col-lg-3">
                <% if service.icon.present? %>
                  <div class="service-icon">
                    <%= image_tag service.icon.url %>
                  </div>
                <% else %>
                  <div class="no-icon">No-Icon</div>
                <% end %>
              </div>
              <div class="col-xs-12 col-md-10 col-lg-9">
                <div class="row">
                  <div class="col-lg-12">
                    <%= f.label :charge %>
                    <%= f.number_field :charge, in: 0..100000,required: true, class: "" %>円
                  </div>
                  <div class="col-lg-12">
                    <%= f.label :due_date %>
                    <%= f.select :due_date, (1..31).each,placeholder: "due_date", class: "form-control" %>日
                  </div>
                </div>
              </div>
            </div>
            <%# .row1 %>

            <div class="row my-2">
              <div class="col-12">
                <div class="form-label-group mb-2">
                  <%= f.text_area :note ,placeholder: "備考欄",class: "form-control mt-4" ,rows: 4 %>
                </div>  
              </div>
            </div>
            <%# .row3 %>

            <div class="row">
              <div class="col-12">
                <div class="button-panel">
                  <%= f.submit class: "btn btn-lg btn-register btn-block mt-3" %>
                </div>  
              </div>
            </div>
            <%# .row4 %>
          </div>
          <%# .card-body %>
        <% end %>
      </div>
      <%# .card %>
    </div>
    <%# .col %>
  </div>
  <%# .row %>
</div>