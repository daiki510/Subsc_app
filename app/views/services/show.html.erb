<div class="container">
  <div class="show-wrapper">
    <h1 class="mb-5">サブスク詳細</h1>
    <table class="table table-hover w-50 mb-5">
      <tr>
        <td>名前</td>
        <td><%= @service.name %></td>
      </tr>
      <tr>
        <td>アイコン</td>
        <% if @service.icon.present? %>
          <td><%= image_tag @service.icon.thumb.url %></td>
        <% else %>
          <td>No-Icon</td>
        <% end %>
      </tr>
      <tr>
        <td>URL</td>
        <td><%= auto_link(@service.link, html: { target: '_blank' }) %></td>
      </tr>
      <tr>
        <td>概要</td>
        <td><%= @service.summary %></td>
      </tr>
      <tr>
        <td>カテゴリー</td>
        <td>
          <% @service.categories.each do |category|%>
            <span class="badge badge-primary py-1 px-2"><%= category.name %></span>
          <% end %>
        </td>
      </tr>
    </table>
    
    <div class="form-footer">
      <% if current_user.admin? %>
        <%= link_to "編集", edit_service_path, class: "btn btn-success mr-3" %>
      <% end %>
      <%= link_to "一覧へ戻る", services_path, class: "btn btn-light" %>
    </div>
  </div>
</div>
