<div class="row">
  <% if @services.blank? %>
    <p>一致する結果はありません</p>
  <% end %>
  <% @services.each do |service| %>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 mb-3">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <% if service.icon.present? %>
                <div class="service-icon">
                  <%= image_tag service.icon.url %>
                </div>
              <% else %>
                <div class="no-icon">No-Icon</div>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="row category">
                <div class="col-md-12">
                  <% service.categories.each do |category|%>
                    <%= link_to category.name, services_path(category_id: category.id), class: "badge badge-primary py-1 px-2" %>
                  <% end %>
                </div>
                <div class="col-md-12">
                  <h5 class="service-title"><%= service.name %></h5>
                </div>
              </div>
            </div>
          </div>
          <%# .row1 %>

          <div class="row mt-4">
            <div class="col-md-7">
              <%= link_to service_path(service) ,"data-toggle" => "popover", "data-content" => "詳細",class: "btn btn-info btn-circle detail-info mr-2" do %>
                <%= fa_icon "info" %>
              <% end %>
              <% if current_user.admin? || service.status == "secret" %>
                <%= link_to edit_service_path(service) ,class: "btn btn-success btn-circle mr-2" do %>
                  <%= fa_icon "pencil" %>
                <% end %>
                <%= link_to service_path(service), method: :delete, remote: true, data: { confirm: '本当に削除してもいいですか?' } ,class: "btn btn-danger btn-circle delete" do %>
                  <%= fa_icon "trash" %>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-5 text-right">
              <span  data-toggle="popover", data-content="利用者数" class="detail-info">
                <%= fa_icon "users" , class: "mr-2" %><%= service.subscriptions.count %>
              </span>
              <span class="ml-3">
                <% if already_added?(service) %>
                  <%= link_to subscription_path(id: get_subscription_id(service)), method: :delete,"data-toggle" => "popover", "data-content" => "外す", class: "btn btn-light detail-info" do %>
                    <%= fa_icon "minus" %>
                  <% end %>
                <% else %>
                  <%= link_to new_subscription_path(service_id: service.id),"data-toggle" => "popover", "data-content" => "追加", class: "btn btn-secondary detail-info" do %>
                    <%= fa_icon "plus" %>
                  <% end %>
                <% end %>
              </span>
            </div>
          </div>
          <%# .row2 %>
        </div>
        <%# .card-body %>
      </div>
      <%# .card %>
    </div>
    <%# .col %>
  <% end %>
</div>
<%# .row %>