<% if already_clipped?(service) %>
  <%= link_to service_clip_path(clip(service), service_id: service.id),"data-toggle" => "popover", "data-content" => "気になる解除", method: :delete, class: 'btn detail-info mt-1' do %>
    <%= fa_icon 'bookmark', type: :solid, class: 'fas' %>
  <% end %>
<% else %>
  <%= link_to service_clips_path(service),"data-toggle" => "popover", "data-content" => "気になる登録", 
  method: :post, class: 'btn detail-info mt-1' do %>
    <%= fa_icon 'bookmark', type: :regular, class: 'far' %>
  <% end %>
<% end %>