<header>
  <nav class="navbar navbar-expand-sm bg-light">
    <%= link_to "Subsc", root_path, class: "nav-brand nav-link" %>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item dropdown">
        <%= link_to services_path, role: "button", "data-toggle" => "dropdown",id: "navbarDropdownMenuLink", "aria-haspopup" => "true", "aria-expanded" => "false", class: "nav-link dropdown-toggle burger-menu" do %>
          <%= fa_icon ("bars") , class: "mr-1" %>MENU
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
          <% if user_signed_in? %>
            <%= link_to "マイページ", user_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "サービス一覧", services_path, class: "dropdown-item" %>
            <%= link_to "お問い合わせ", new_contact_path, class: "dropdown-item" %>
            <% if current_user.admin? %>
              <%= link_to "管理者メニュー", rails_admin_path, class: "dropdown-item" %>
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item"  %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "新規登録", new_user_registration_path, class: "dropdown-item" %>
            <%= link_to "サービス一覧", services_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </nav>
</header>