<% if notice %>
  <div class="alert alert-success" >
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" onfocus="this.blur();">&times;</button>
  </div>
<% elsif alert %>
  <div class="alert alert-danger" >
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" onfocus="this.blur();">&times;</button>
  </div>
<% end %>