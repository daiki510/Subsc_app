<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="card card-signin my-5">
      <div class="card-body">
        <h5 class="card-title text-center">Sign up</h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
          <div class="form-label-group">
            <%= f.text_field :name,placeholder: "ユーザー名", required: true, class: "form-control mb-4" %>
          </div>

          <div class="form-label-group">
            <%= f.email_field :email, placeholder: "メールアドレス", required: true, class: "form-control mb-4" %>
          </div>

          <div class="form-label-group">
            <%= f.password_field :password, placeholder: "パスワード", required: true, class: "form-control mb-4" %>
          </div>

          <div class="form-label-group">
            <%= f.password_field :password_confirmation, placeholder: "パスワード確認", required: true, class: "form-control mb-4" %>
          </div>

          <%= f.submit "Sign up", class: "btn btn-lg btn-signin btn-block text-uppercase mt-3" %>
        <% end %>
      </div>
      <div class="card-footer py-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>