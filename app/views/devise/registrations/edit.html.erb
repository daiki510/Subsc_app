<div class="container">
  <h2>ユーザー編集画面</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "w-25" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "w-25" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :current_password %> <i></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password",class: "w-25"  %>
    </div>

    <div class="field">
      <%= f.label :password %> <i>(変更の場合のみ、新しいパスワードを入力)</i><br />
      <%= f.password_field :password, autocomplete: "new-password",class: "w-25"  %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><i>(新しいパスワードを入力)</i><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "w-25"  %>
    </div>

    <div class="actions">
      <%= f.submit "更新" ,class: "btn btn-primary my-3"%>
    </div>
  <% end %>

  <%# <h5>アカウントの削除</h5> %>

  <p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか？ 全てのデータが削除されます" }, method: :delete, class: "btn btn-sm btn-outline-secondary" %></p>

  <%= link_to "戻る", :back , class: "btn btn-light"%>
</div>
