<div class="container mb-5">
  <div class="row pb-5">
    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-6 mx-auto mb-3">
      <div class="card p-5">
        <h2 class="form-title">パスワード再発行</h2>
        <div class="card-body p-3">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-label-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "Email address", class: "form-control mb-4" %>
              <%= f.label :email %>
            </div>

            <div class="actions">
              <%= f.submit "送信する", class: "btn btn-lg btn-primary btn-block text-uppercase mt-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

