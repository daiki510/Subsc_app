<div class="container">
  <h2>パスワード再発行</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %><em> (<%= @minimum_password_length %> 文字以上)</em><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control w-25 mb-2" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認用パスワード" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control w-25 mb-2"  %>
    </div>

    <div class="actions">
      <%= f.submit "パスワード変更",  class: "btn btn-primary my-3"   %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
