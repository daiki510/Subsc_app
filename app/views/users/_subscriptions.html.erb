<div class="row">
  <% @services.each do |service| %>
    <div class="col-12 mb-3">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-2 img-height">
              <% if service.icon.present? %>
                <%= image_tag service.icon.thumb.url %>
              <% else %>
                No-Icon
              <% end %>
            </div>
            <div class="col-md-4 subsc-title">
              <p>
                <% service.categories.each do |category|%>
                  <span class="badge badge-primary p-1 px-2"><%= category.name %></span>
                <% end %>
              </p>
              <h5><%= service.name %></h5>
            </div>

            <% subsc_subscription = subscription(service) %>
            <% if subsc_subscription %>
              <div class="col-md-2">
                <%= subsc_subscription.charge %>
              </div>
              <div class="col-md-2">
                <%= subsc_subscription.due_date %>日
              </div>
              <div class="col-md-2">
                <%= link_to subscription_path(service_id: service.id), class: "btn btn-info mr-2" do %>
                  <%= fa_icon "info" %>
                <% end %>
                <%= link_to edit_subscription_path(service_id: service.id) ,class: "btn btn-success mr-2" do %>
                  <%= fa_icon "pencil" %>
                <% end %>
                <%= link_to subscription_path(subsc_subscription,back_to_mypage: "true"), method: :delete,data: { confirm: '本当に解除してもいいですか?' }, class: "btn btn-danger" do %>
                  <%= fa_icon "minus" %>
                <% end %>
              </div>
            <% else %>
              <div class="col-md-2">未登録</div>
              <div class="col-md-2">未登録</div>
              <div class="col-md-2">
                <%= link_to new_subscription_path(service_id: service.id), 'data-toggle' => "popover", 'data-content' => "詳細登録" ,'data-placement'=> "bottom" ,class: "subscription-info btn btn-primary mr-2" do %>
                  <%= fa_icon "plus" %>
                <% end %>
                <%= link_to subscription_path(service, id: current_user.id, back_to_mypage: "true"), method: :delete,data: { confirm: '本当に解除してもいいですか?' }, class: "btn btn-danger" do %>
                  <%= fa_icon "minus" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <%# .card-body %>
      </div>
      <%# .card %>
    </div>
    <%# .col %>
  <% end %>
</div>
<%# .row %>