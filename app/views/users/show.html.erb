<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%# 検索・ソート %>
      <%= render 'search' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-4 counter mt-3">
          <p>登録件数 <%= subsc_count(@subscriptions) %>件</p>
        </div>
        <div class="col-md-6 col-md-offset-3">
          <%= paginate @subscriptions %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%# ユーザー詳細 %>
    <div class="col-md-3">
      <%= render 'user' %>
    </div>
    <%# サブスクリプション一覧 %>
    <div class="col-md-9">
      <%= render 'subscriptions' %>
    </div>
  </div>
</div>