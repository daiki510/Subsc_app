<% provide(:title, "Mypage") %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 add-subscription">
      <%= link_to 'サブスクリプション追加', services_path, class: "btn btn-new my-3" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%# 検索・ソート %>
      <%= render 'search' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <div class="row mb-3">
        <div class="col-md-8 ml-3">
          <%= paginate @services %>
        </div>
        <div class="col-md-3 text-right pt-3">
          <span>表示件数 <%= @services.count %>件 / <%= @services.total_count %>件中</span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%# ユーザー詳細 %>
    <div class="col-md-3 mb-3">
      <%= render 'user' %>
    </div>
    <%# サブスクリプション一覧 %>
    <div class="col-md-9">
      <% if @services.blank? %>
        <%= render 'first_visit_page' %>
      <% else %>
        <%= render 'subscription' %>
      <% end %>
    </div>
  </div>
</div>
<div id="subscription-show-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>